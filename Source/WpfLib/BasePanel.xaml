<UserControl x:Name="BGPanel" x:Class="WpfLib.BasePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" MinWidth="10" MinHeight="10">
    <Grid>
        <local:UpdatePanel x:Name="UpdatePanel" HorizontalAlignment="Left" Width="400" Height="450" VerticalAlignment="Top" Visibility="Visible"/>
        <local:DownloadPanel x:Name="DLPanel" Width="400" Height="450" VerticalAlignment="Top" Visibility="Hidden"/>
    </Grid>
</UserControl>
